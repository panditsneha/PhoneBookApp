<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gravity"
    android:layout_width="380dp"
    android:layout_height="650dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".CallDetailsActivity"
    android:layout_gravity="center"
    android:background="@drawable/contact_details_border">
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:titleMarginStart="60dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/contactImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/contact_icon"
        android:translationY="-30dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/lightBlackoption"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/editinfo"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Edit Info"
        android:textColor="@color/white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/edit_border"
        android:shadowRadius="30"
        android:shadowColor="@color/black"
       android:outlineAmbientShadowColor="@color/black"/>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jura_light"
            android:padding="4dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jura_light"
            android:padding="4dp"
            android:text="+919236789934"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="-70dp" />


        <Button
            android:id="@+id/phone_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_call_24_2"
            android:translationX="100dp"
            android:translationY="-52dp" />

        <Button
            android:id="@+id/phone_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_message_24_2"
            android:translationX="160dp"
            android:translationY="-95dp" />

        <TextView
            android:id="@+id/urEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/happy_monkey"
            android:padding="4dp"
            android:text="snehagul2309@gmail.com"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:translationX="-70dp"
            android:translationY="-80dp" />

    </LinearLayout>


</LinearLayout>